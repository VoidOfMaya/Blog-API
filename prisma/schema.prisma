generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User{
  id          Int       @id @default(autoincrement())
  email       String    @unique
  firstName   String
  lastName    String
  password    String
  //relations
  roleId      Int
  role        Role     @relation(fields: [roleId], references: [id])
  posts       Post[]
  comments    Comment[]
}
model Role{
  id          Int       @id @default(autoincrement())
  name        String    @unique
  // user relations
  users       User[]

}
model Post{
  id          Int       @id @default(autoincrement())
  title       String
  content     String
  isPublished Boolean   @default(false)
  createdAt   DateTime  @default(now())
  publishedAt DateTime?
  updatedAt   DateTime  @updatedAt
  // user relations
  userId      Int
  author        User      @relation(fields: [userId], references: [id])
  //comment relations
  comments    Comment[]

}
model Comment{
  id          Int       @id @default(autoincrement())
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  // user relations
  author       User      @relation(fields: [userId], references: [id])
  userId      Int
  //post relations
  post        Post      @relation(fields: [postId], references: [id], onDelete: Cascade)  //deletes comments once post is deleted
  postId      Int

}
